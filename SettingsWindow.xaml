<Window x:Class="AnimeFolderOrganizer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AnimeFolderOrganizer.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:models="clr-namespace:AnimeFolderOrganizer.Models"
        mc:Ignorable="d"
        Title="設定" Height="420" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <ObjectDataProvider x:Key="NamingLanguageEnum" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:NamingLanguage"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Google Gemini API 設定" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <TextBlock Text="API Key:"/>
                <TextBox Text="{Binding ApiKey}" Margin="0,5,0,0" Padding="5"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Model:"/>
            <ComboBox ItemsSource="{Binding AvailableModels}"
                      SelectedItem="{Binding ModelName}"
                      IsEditable="True"
                      Margin="0,5,0,0"
                      Padding="5"/>
            <TextBlock Text="可直接輸入或從清單選擇（會自動載入可用模型）" FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <TextBlock Text="命名格式:"/>
            <TextBox Text="{Binding NamingFormat}" Margin="0,5,0,0" Padding="5"/>
            <TextBlock Text="可用標記: {Title}, {TitleTW}, {TitleCN}, {TitleJP}, {TitleEN}, {Year}, {Original}" FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,10,0,0">
            <TextBlock Text="偏好語言:"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource NamingLanguageEnum}}"
                      SelectedItem="{Binding PreferredLanguage}"
                      Width="160"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <TextBlock Grid.Row="5" TextWrapping="Wrap" Margin="0,10,0,0" Foreground="Gray" FontSize="12">
            請前往 Google AI Studio 取得免費的 API Key 以啟用自動識別功能。
        </TextBlock>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Command="{Binding GetApiKeyCommand}" Content="取得 API Key" Margin="0,0,10,0" Padding="10,5"/>
            <Button Command="{Binding SaveCommand}" Content="儲存並關閉" Padding="10,5" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
