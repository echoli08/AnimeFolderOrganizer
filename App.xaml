<Application x:Class="AnimeFolderOrganizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AnimeFolderOrganizer">
    <Application.Resources>
        <!-- Material Design 3-like palette -->
        <Color x:Key="MdPrimaryColor">#00639A</Color>
        <Color x:Key="MdOnPrimaryColor">#FFFFFF</Color>
        <Color x:Key="MdSurfaceColor">#FDFBFF</Color>
        <Color x:Key="MdSurfaceVariantColor">#E7EEF6</Color>
        <Color x:Key="MdOutlineColor">#D0D7E2</Color>
        <Color x:Key="MdOnSurfaceColor">#1C1B1F</Color>

        <SolidColorBrush x:Key="MdPrimary" Color="{StaticResource MdPrimaryColor}"/>
        <SolidColorBrush x:Key="MdOnPrimary" Color="{StaticResource MdOnPrimaryColor}"/>
        <SolidColorBrush x:Key="MdSurface" Color="{StaticResource MdSurfaceColor}"/>
        <SolidColorBrush x:Key="MdSurfaceVariant" Color="{StaticResource MdSurfaceVariantColor}"/>
        <SolidColorBrush x:Key="MdOutline" Color="{StaticResource MdOutlineColor}"/>
        <SolidColorBrush x:Key="MdOnSurface" Color="{StaticResource MdOnSurfaceColor}"/>

        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="{StaticResource MdSurface}"/>
            <Setter Property="Foreground" Value="{StaticResource MdOnSurface}"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Text"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource MdPrimary}"/>
            <Setter Property="Foreground" Value="{StaticResource MdOnPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource MdOutline}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>

        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource MdOutline}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>

        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Padding" Value="4,2"/>
        </Style>

        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource MdSurfaceVariant}"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="BorderBrush" Value="{StaticResource MdOutline}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="{x:Type TabControl}">
            <Setter Property="Background" Value="{StaticResource MdSurface}"/>
        </Style>

        <Style TargetType="{x:Type ProgressBar}">
            <Setter Property="Foreground" Value="{StaticResource MdPrimary}"/>
        </Style>
    </Application.Resources>
</Application>
